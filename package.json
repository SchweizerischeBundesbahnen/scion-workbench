{
  "name": "scion",
  "version": "0.0.0-beta.32",
  "description": "SCION Workbench helps to build multi-view web applications and integrates separate micro frontends into a consistent rich web application.",
  "license": "EPL-2.0",
  "homepage": "https://github.com/SchweizerischeBundesbahnen/scion-workbench",
  "bugs": {
    "url": "https://github.com/SchweizerischeBundesbahnen/scion-workbench/issues"
  },
  "author": {
    "name": "SCION Workbench contributors",
    "url": "https://github.com/SchweizerischeBundesbahnen/scion-workbench"
  },
  "scripts": {
    "build-all": "run-s *:build",
    "lint-all": "run-p *:lint",
    "test-all": "run-s *:test",
    "test-all:headless": "cross-env HEADLESS=true run-s *:test",
    "e2e-all": "run-p *:e2e",
    "e2e-all:headless": "run-p *:e2e-headless",

    "toolkit:build": "ng build --prod @scion/toolkit",
    "toolkit:lint": "ng lint @scion/toolkit",
    "toolkit:test": "ng test @scion/toolkit",
    "posttoolkit:build": "scss-bundle -e projects/scion/toolkit/viewport/src/theme/_scrollbar.scss -o dist/scion/toolkit/scrollbar.scss",

    "ɵtoolkit:build": "ng build --prod @scion/ɵtoolkit",
    "ɵtoolkit:lint": "ng lint @scion/ɵtoolkit",
    "ɵtoolkit:test": "ng test @scion/ɵtoolkit",

    "toolkit-apps:serve": "ng serve toolkit-apps --aot",
    "toolkit-apps:lint": "ng lint toolkit-apps",
    "toolkit-apps:build": "ng build --configuration=production toolkit-apps",

    "microfrontend-platform:build": "ng build --prod @scion/microfrontend-platform",
    "microfrontend-platform:lint": "ng lint @scion/microfrontend-platform",
    "microfrontend-platform-e2e-specs:lint": "ng lint e2e-microfrontend-platform",
    "microfrontend-platform:test": "ng test @scion/microfrontend-platform",
    "microfrontend-platform:e2e": "run-p -r microfrontend-apps:serve microfrontend-platform:await-then-protractor",
    "microfrontend-platform:e2e-headless": "cross-env HEADLESS=true run-p -r microfrontend-apps:serve microfrontend-platform:await-then-protractor",
    "microfrontend-platform:await-then-protractor": "run-s microfrontend-apps:await:* microfrontend-platform:run-protractor",
    "microfrontend-platform:run-protractor": "ng e2e e2e-microfrontend-platform",
    "microfrontend-platform:run-protractor-headless": "cross-env HEADLESS=true ng e2e e2e-microfrontend-platform",

    "microfrontend-apps:serve": "run-p -r microfrontend-apps:serve:*",
    "microfrontend-apps:serve:4201": "ng serve microfrontend-apps --aot --port 4201",
    "microfrontend-apps:serve:4202": "ng serve microfrontend-apps --aot --port 4202",
    "microfrontend-apps:serve:4203": "ng serve microfrontend-apps --aot --port 4203",
    "microfrontend-apps:serve:4204": "ng serve microfrontend-apps --aot --port 4204",
    "microfrontend-apps:await:4201": "wait-on http-get://localhost:4201",
    "microfrontend-apps:await:4202": "wait-on http-get://localhost:4202",
    "microfrontend-apps:await:4203": "wait-on http-get://localhost:4203",
    "microfrontend-apps:await:4204": "wait-on http-get://localhost:4204",
    "microfrontend-apps:lint": "ng lint microfrontend-apps",
    "microfrontend-apps:build": "ng build --configuration=production microfrontend-apps",
    "microfrontend-apps:build-local": "ng build --configuration=local microfrontend-apps"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "8.0.0",
    "@angular/cdk": "8.0.0",
    "@angular/common": "8.0.0",
    "@angular/compiler": "8.0.0",
    "@angular/core": "8.0.0",
    "@angular/forms": "8.0.0",
    "@angular/platform-browser": "8.0.0",
    "@angular/platform-browser-dynamic": "8.0.0",
    "@angular/router": "8.0.0",
    "js-sha256": "0.9.0",
    "rxjs": "6.5.2",
    "tslib": "1.9.3",
    "web-animations-js": "2.3.1",
    "zone.js": "0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.800.2",
    "@angular-devkit/build-ng-packagr": "0.800.2",
    "@angular/cli": "8.0.2",
    "@angular/compiler-cli": "8.0.0",
    "@angular/language-service": "8.0.0",
    "@types/jasmine": "3.3.13",
    "@types/jasminewd2": "2.0.6",
    "@types/node": "10.12.18",
    "codelyzer": "5.1.0",
    "cross-env": "5.2.0",
    "jasmine-core": "3.4.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "4.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.5",
    "karma-jasmine": "2.0.1",
    "karma-jasmine-html-reporter": "1.4.2",
    "ng-packagr": "5.3.0",
    "now": "16.7.3",
    "npm-run-all": "4.1.5",
    "protractor": "5.4.2",
    "puppeteer": "1.13.0",
    "rxjs-tslint": "0.1.7",
    "scss-bundle": "3.0.1",
    "ts-node": "8.2.0",
    "tsconfig-paths": "3.9.0",
    "tsickle": "0.35.0",
    "tslint": "5.12.1",
    "typescript": "3.4.5",
    "wait-on": "3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SchweizerischeBundesbahnen/scion-workbench.git"
  }
}
